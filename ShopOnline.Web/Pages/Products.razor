@page "/"
@inherits ProductsBase

@if (Products == null)
{
    <DisplaySpinner />
}
else
{
    <h3 class="mb-5">Products</h3>

    var productCount = Products.Count();

    @if(productCount > 0)
    {
        @foreach(var prodGrop in GetGroupedByCategory())
        {
            <h4>@GetCategoryName(prodGrop)</h4>
                
            <div class="row mt-3">
                <DisplayProduct Products="@prodGrop.Take(4)"></DisplayProduct>
            </div>
            <hr class="mb-3"/>
        }
    }
}

